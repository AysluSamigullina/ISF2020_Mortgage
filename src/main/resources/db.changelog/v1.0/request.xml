<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="Ayslu S">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="request"/>
            </not>
        </preConditions>

        <createTable tableName="request"
                     remarks="Таблица заявок">
            <column name="id" type="uuid"
                    remarks="Идентификатор записи">
                <constraints primaryKey="true"
                             primaryKeyName="request_pk"
                             nullable="false"/>
            </column>
            <column name="fullname" type="varchar(255)" remarks="ФИО клиента">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <comment>Задача по созданию пользователя</comment>

    </changeSet>


</databaseChangeLog>